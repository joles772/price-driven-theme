{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'section-collection-tabs.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
  assign columns = section.settings.columns_desktop
  if columns > 5
    assign columns = 5
  endif
-%}

<collection-tabs class="color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-list-wrapper collection-tabs page-width isolate{% if show_mobile_slider %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %} title-wrapper--no-top-margin">
        <h2
          id="SectionHeading-{{ section.id }}"
          class="collection-list-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        >
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <!-- Tab Navigation -->
    <ul class="collection__navigation">
      {%- for block in section.blocks -%}
        <li
          class="navigation-item {% if forloop.index == 1 %}active{% endif %}{% if block.settings.tab_image != blank %} image{% endif %}"
          tabindex="0"
          data-tab="tab-{{ forloop.index }}"
        >
          {% if block.settings.tab_image != blank %}
            {{
              block.settings.tab_image
              | image_url: width: 130
              | image_tag: loading: 'lazy', class: 'motion-reduce', widths: '130'
            }}
          {% endif %}

          <h3 class="tab-title">
            {% if block.settings.tab_title != blank %}
              {{- block.settings.tab_title -}}
            {% else %}
              {{- 'Collections' -}}
            {% endif %}
          </h3>
        </li>
      {%- endfor -%}
    </ul>

    <!-- Tab Contents -->
    <div class="collections_lists">
      {%- for block in section.blocks -%}
        <slider-component class="slider-mobile-gutter{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          <ul
            class="collection-list collection-tabs-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--{{ section.blocks.size }}-items{% if forloop.index == 1 %} active{% endif %}"
            id="TabContent-{{ section.id }}-{{ forloop.index }}"
            data-tab-id="tab-{{ forloop.index }}"
            role="list"
          >
            {%- if block.settings.collection_list.size > 0 -%}
              {%- for collection in block.settings.collection_list -%}
                <li
                  id="Slide-{{ section.id }}-{{ forloop.index }}"
                  class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if collection.featured_image == nil %} collection-list__item--no-media{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                  {% render 'card-collection',
                    card_collection: collection,
                    media_aspect_ratio: section.settings.image_ratio,
                    columns: columns,
                    placeholder_image: placeholder_image
                  %}
                </li>
              {%- endfor -%}
            {%- else -%}
              {%- for i in (1..section.settings.columns_desktop) -%}
                <li
                  class="collection-list__item grid__item{% if show_mobile_slider %} slider__slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                  {% render 'card-collection',
                    media_aspect_ratio: section.settings.image_ratio,
                    columns: columns,
                    placeholder_image: placeholder_image
                  %}
                </li>
              {%- endfor -%}
            {%- endif -%}
          </ul>

          {%- if show_mobile_slider -%}
            <div class="slider-buttons">
              <button
                type="button"
                class="slider-button slider-button--prev"
                name="previous"
                aria-label="{{ 'general.slider.previous_slide' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </button>
              <div class="slider-counter caption">
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                <span class="slider-counter--total">{{ block.settings.collection_list.size }}</span>
              </div>
              <button
                type="button"
                class="slider-button slider-button--next"
                name="next"
                aria-label="{{ 'general.slider.next_slide' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </button>
            </div>
          {%- endif -%}
        </slider-component>
      {%- endfor -%}
    </div>
  </div>
</collection-tabs>

<script src="{{ 'collection-tabs.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Collection Tabs",
  "tag": "section",
  "class": "section section-collection-list section-collection-tabs",
  "max_blocks": 8,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Shop by Category",
      "label": "Section Title"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "XXL"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "header",
      "content": "Collection Display Settings"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile settings"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Number of columns on mobile"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": true,
      "label": "Enable swipe on mobile"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collection_tab",
      "name": "Collection Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "default": "Featured Collections",
          "label": "Tab Title",
          "info": "This will appear on the tab button"
        },
        {
          "type": "collection_list",
          "id": "collection_list",
          "label": "Collections to Display",
          "limit": 12,
          "info": "Collections that will be displayed when this tab is active"
        },
        {
          "type": "image_picker",
          "id": "tab_image",
          "label": "Tab Icon/Image (Optional)",
          "info": "Optional image to display alongside the tab title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Tabs",
      "blocks": [
        {
          "type": "collection_tab",
          "settings": {
            "tab_title": "Featured Collections"
          }
        },
        {
          "type": "collection_tab",
          "settings": {
            "tab_title": "Popular Categories"
          }
        },
        {
          "type": "collection_tab",
          "settings": {
            "tab_title": "New Collections"
          }
        }
      ]
    }
  ]
}
{% endschema %}
