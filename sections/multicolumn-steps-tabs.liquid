{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .multicolumn-tabs-{{ section.id }} {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .multicolumn-tabs-{{ section.id }} .tab-button {
    background: transparent;
    border: none;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: #666;
    cursor: pointer;
    border-bottom: 3px solid transparent;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: -2px;
  }

  .multicolumn-tabs-{{ section.id }} .tab-button:hover {
    color: #9a0f39;
  }

  .multicolumn-tabs-{{ section.id }} .tab-button.active {
    color: #9a0f39;
    border-bottom-color: #9a0f39;
  }

  .multicolumn-{{ section.id }} .step-indicator {
    display: grid;
    gap: var(--grid-desktop-horizontal-spacing);
    margin-bottom: 2rem;
    position: relative;
    align-items: center;
  }

  .multicolumn-{{ section.id }} .step-indicator::before {
    content: '';
    position: absolute;
    top: 50%;
    height: 2px;
    background-color: #e5e5e5;
    z-index: 1;
  }

  {%- assign columns_per_tab = section.settings.columns_per_tab | split: ',' -%}
  {%- for tab_index in (0..columns_per_tab.size) -%}
    {%- unless tab_index >= columns_per_tab.size -%}
      {%- assign columns_for_tab = columns_per_tab[tab_index] | default: 3 | plus: 0 -%}

      .multicolumn-{{ section.id }} .tab-content[data-tab="{{ tab_index }}"] .step-indicator {
        grid-template-columns: repeat({{ columns_for_tab }}, 1fr);
    }

    .multicolumn-list__item--empty {
      min-height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .multicolumn-list__item--empty .multicolumn-card {
      border: 1px dashed #e0e0e0;
      background-color: #f9f9f9;
      opacity: 0.3;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 180px;
    }

    .multicolumn-list__item--empty .multicolumn-card:before {
      content: "Empty Column";
      color: #999;
      font-size: 14px;
      }

      .multicolumn-{{ section.id }} .tab-content[data-tab="{{ tab_index }}"] .step-indicator::before {
        left: calc(50% / {{ columns_for_tab }});
        right: calc(50% / {{ columns_for_tab }});
      }
    {%- endunless -%}
  {%- endfor -%}

  .multicolumn-{{ section.id }} .step-number {
    background-color: #9a0f39;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
    position: relative;
    z-index: 2;
    margin: 0 auto;
  }

  .multicolumn-{{ section.id }} .tab-content {
    display: none;
  }

  .multicolumn-{{ section.id }} .tab-content.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .multicolumn-tabs-{{ section.id }} {
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }

    .multicolumn-tabs-{{ section.id }} .tab-button {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      margin-bottom: 0.5rem;
      border-bottom: none;
      border-radius: 8px;
      background: #f5f5f5;
      margin-right: 0;
    }

    .multicolumn-tabs-{{ section.id }} .tab-button.active {
      background: #9a0f39;
      color: white;
      border-bottom: none;
    }

    .multicolumn-{{ section.id }} .step-indicator {
      gap: var(--grid-mobile-horizontal-spacing);
      margin-bottom: 1.5rem;
    }

    .multicolumn-{{ section.id }} .step-number {
      width: 32px;
      height: 32px;
      font-size: 1rem;
    }

    {%- for tab_index in (0..columns_per_tab.size) -%}
      {%- unless tab_index >= columns_per_tab.size -%}
        {%- assign columns_for_tab = columns_per_tab[tab_index] | default: 3 | plus: 0 -%}
        {%- assign mobile_columns = columns_for_tab | at_most: section.settings.columns_mobile | plus: 0 -%}

        .multicolumn-{{ section.id }} .tab-content[data-tab="{{ tab_index }}"] .step-indicator {
          grid-template-columns: repeat({{ mobile_columns }}, 1fr);
        }

        .multicolumn-{{ section.id }} .tab-content[data-tab="{{ tab_index }}"] .step-indicator::before {
          left: calc(50% / {{ mobile_columns }});
          right: calc(50% / {{ mobile_columns }});
        }
      {%- endunless -%}
    {%- endfor -%}
  }
{%- endstyle -%}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const multicolumnTabs = document.querySelector('.multicolumn-tabs-{{ section.id }}');
    const tabContents = document.querySelectorAll('.multicolumn-{{ section.id }} .tab-content');

    if (multicolumnTabs && tabContents.length > 0) {
      const tabButtons = multicolumnTabs.querySelectorAll('.tab-button');

      // Set first tab as active by default
      if (tabButtons.length > 0) {
        tabButtons[0].classList.add('active');
        tabContents[0].classList.add('active');
      }

      // Add click handlers
      tabButtons.forEach((button, index) => {
        button.addEventListener('click', () => {
          // Remove active class from all buttons and contents
          tabButtons.forEach((btn) => btn.classList.remove('active'));
          tabContents.forEach((content) => content.classList.remove('active'));

          // Add active class to clicked button and corresponding content
          button.classList.add('active');
          if (tabContents[index]) {
            tabContents[index].classList.add('active');
          }
        });
      });
    }
  });
</script>

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="multicolumn multicolumn-{{ section.id }} color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin multicolumn__title">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.button_label != blank and show_mobile_slider -%}
          <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">
            {{- section.settings.button_label | escape -}}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}

    {%- comment -%} Tab Navigation {%- endcomment -%}
    {%- assign tab_names = section.settings.tab_names | split: ',' -%}
    {%- if tab_names.size > 0 and tab_names[0] != blank -%}
      <div class="multicolumn-tabs-{{ section.id }}">
        {%- for tab_name in tab_names -%}
          {%- assign tab_clean = tab_name | strip -%}
          {%- if tab_clean != blank -%}
            <button class="tab-button" type="button">
              {{ tab_clean }}
            </button>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- comment -%} Tab Contents {%- endcomment -%}
    <div class="multicolumn multicolumn-{{ section.id }}">
      {%- assign columns_per_tab = section.settings.columns_per_tab | split: ',' -%}
      {%- assign tab_names = section.settings.tab_names | split: ',' -%}

      {%- liquid
        assign highest_ratio = 0
        for block in section.blocks
          if block.settings.image.aspect_ratio > highest_ratio
            assign highest_ratio = block.settings.image.aspect_ratio
          endif
        endfor
      -%}

      {%- comment -%} Generate all tabs {%- endcomment -%}
      {%- assign total_tabs = tab_names.size -%}
      {%- assign global_block_index = 0 -%}

      {%- for tab_index in (0..total_tabs) -%}
        {%- unless tab_index >= total_tabs -%}
          {%- assign columns_for_tab = columns_per_tab[tab_index] | default: 3 | plus: 0 -%}

          <div class="tab-content" data-tab="{{ tab_index }}">
            {%- comment -%} Step Indicator {%- endcomment -%}
            <div class="step-indicator">
              {%- for i in (1..columns_for_tab) -%}
                <div class="step-number">{{ forloop.index }}</div>
              {%- endfor -%}
            </div>

            <slider-component class="slider-mobile-gutter">
              <ul
                class="multicolumn-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ columns_for_tab }}-col-desktop{% if show_mobile_slider %} slider slider--tablet grid--peek{% endif %}"
                id="Slider-{{ section.id }}-tab-{{ tab_index }}"
                role="list"
              >
                {%- comment -%} Add blocks for this tab {%- endcomment -%}
                {%- for i in (1..columns_for_tab) -%}
                  {%- assign current_block = section.blocks[global_block_index] -%}

                  {%- assign empty_column = '' -%}
                  {%- if current_block == blank -%}
                    {%- assign empty_column = ' multicolumn-list__item--empty' -%}
                  {%- elsif current_block.settings.image == blank
                    and current_block.settings.title == blank
                    and current_block.settings.text == blank
                    and current_block.settings.link_label == blank
                  -%}
                    {%- assign empty_column = ' multicolumn-list__item--empty' -%}
                  {%- endif -%}

                  <li
                    id="Slide-{{ section.id }}-{{ global_block_index | plus: 1 }}"
                    class="multicolumn-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{{ empty_column }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if current_block %}
                      {{- current_block.shopify_attributes -}}
                    {% endif %}
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ global_block_index | plus: 1 }};"
                    {% endif %}
                  >
                    <div class="multicolumn-card content-container">
                      {%- if current_block and current_block.settings.image != blank -%}
                        {% if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' %}
                          {% assign spaced_image = true %}
                        {% endif %}
                        <div class="multicolumn-card__image-wrapper multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width{% if section.settings.image_width != 'full' or spaced_image %} multicolumn-card-spacing{% endif %}">
                          <div
                            class="media media--transparent media--{{ section.settings.image_ratio }}"
                            {% if section.settings.image_ratio == 'adapt' %}
                              style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                            {% endif %}
                          >
                            {%- liquid
                              assign number_of_columns = columns_for_tab
                              assign number_of_columns_mobile = section.settings.columns_mobile
                              assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                              assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                              assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                              if section.settings.image_width == 'half'
                                assign image_width = 0.5
                              elsif section.settings.image_width == 'third'
                                assign image_width = 0.33
                              else
                                assign image_width = 1
                              endif
                            -%}
                            {% capture sizes %}
                              (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                              (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                              (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                              calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                            {% endcapture %}
                            {{
                              current_block.settings.image
                              | image_url: width: 3200
                              | image_tag:
                                widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                                sizes: sizes,
                                class: 'multicolumn-card__image'
                            }}
                          </div>
                        </div>
                      {%- endif -%}
                      <div class="multicolumn-card__info">
                        {%- if current_block and current_block.settings.title != blank -%}
                          <h3 class="inline-richtext">{{ current_block.settings.title }}</h3>
                        {%- endif -%}
                        {%- if current_block and current_block.settings.text != blank -%}
                          <div class="rte">{{ current_block.settings.text }}</div>
                        {%- endif -%}
                        {%- if current_block and current_block.settings.link_label != blank -%}
                          <a
                            class="link animate-arrow"
                            {% if current_block.settings.link == blank %}
                              role="link" aria-disabled="true"
                            {% else %}
                              href="{{ current_block.settings.link }}"
                            {% endif %}
                          >
                            {{- current_block.settings.link_label | escape -}}
                            <span class="svg-wrapper"
                              ><span class="icon-wrap">&nbsp;{{ 'icon-arrow.svg' | inline_asset_content -}}</span></span
                            >
                          </a>
                        {%- endif -%}
                      </div>
                    </div>
                  </li>
                  {%- assign global_block_index = global_block_index | plus: 1 -%}
                {%- endfor -%}
              </ul>

              {%- if show_mobile_slider -%}
                <div class="slider-buttons large-up-hide">
                  <button
                    type="button"
                    class="slider-button slider-button--prev"
                    name="previous"
                    aria-label="{{ 'general.slider.previous_slide' | t }}"
                  >
                    <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
                  </button>
                  <div class="slider-counter caption">
                    <span class="slider-counter--current">1</span>
                    <span aria-hidden="true"> / </span>
                    <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                    <span class="slider-counter--total">{{ columns_for_tab }}</span>
                  </div>
                  <button
                    type="button"
                    class="slider-button slider-button--next"
                    name="next"
                    aria-label="{{ 'general.slider.next_slide' | t }}"
                  >
                    <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
                  </button>
                </div>
              {%- endif -%}
            </slider-component>
          </div>
        {%- endunless -%}
      {%- endfor -%}
    </div>

    <div class="center{% if show_mobile_slider %} small-hide medium-hide{% endif %}">
      {%- if section.settings.button_label != blank -%}
        <a
          class="button button--primary"
          {% if section.settings.button_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.button_link }}"
          {% endif %}
        >
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

